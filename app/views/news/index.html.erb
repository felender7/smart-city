


<div class="row">
  <div class="col-sm-6">
    <h1>News</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_news_path, class: 'btn btn-primary' do %>
    Add New News
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Title</th>
            <th>Body</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @news.each do |news| %>
        <%= content_tag :tr, id: dom_id(news), class: dom_class(news) do %>
          

                      <td><%= news.title %></td>
                      <td><%= news.body %></td>
          
          
            <td><%= link_to 'Show', news %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
